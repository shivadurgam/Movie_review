<div class="jumbotron">

  <div class="row">
      <div class="col-sm-6">
        <%= image_tag @movie.image.url(:medium) %>
      </div>
      <div class="col-sm-6">
        <div class="table">
        <table class="table">
        <tbody>
        <tr>
          <td><strong>Title:</strong></td>
          <td><%= @movie.title %></td>
        </tr>
        <tr>
          <td><strong>Description:</strong></td>
          <td><%= @movie.description %></td>
        </tr>
        <tr>
          <td><strong>Movie length:</strong></td>
          <td><%= @movie.movie_length %></td>
        </tr>
        <tr>
          <td><strong>Director:</strong></td>
          <td><%= @movie.director %></td>
        </tr>
        <tr>
          <td><strong>Rating:</strong></td>
          <td><%= @movie.rating %></td>
        </tr>
        </tbody>
        </table>
        </div>
        <%= link_to 'Edit', edit_movie_path(@movie) %> |
        <%= link_to 'Back', movies_path %> <br /> <br />

          <div class="panel panel-default">
            <div class="panel-heading">
              <h3>Reviews:</h3>
            </div>
            <div class="panel-body">

              <% if @movie.reviews.any? %>
                  <div class="reviews">
                  <ul>
                  <% @movie.reviews.each do |review|%>
                    
                    <li><%= review.rating %> ><%= review.comment %> <i>by <%= review.user.email %></i>
                    <% if review.user == current_user %>
                     <%= link_to 'Delete', [review.movie, review], method: :delete, confirm: {data: "are you sure?"} %> 
                    <% end %></li>
                  <% end %>
                  </ul>
                  </div>
                
              <% else %>
                <h4>No reviews yet, be the first one to write a review.</h4>
              <% end %>

              

              <%= render 'reviews/form' %>
            </div>
          </div>
      </div>
  </div>
</div>
